@model IEnumerable<MusicPlayerWeb.Models.Song>
@{
    // Menggunakan   yang baru kita buat
    ViewData["Title"] = "All Songs";
}

<style>
    /* Styling List Item spesifik halaman ini (mengikuti XAML) */
    .song-list-item {
        display: grid;
        grid-template-columns: 65px 1fr 100px 40px; /* Sesuai XAML ColumnDefinitions */
        align-items: center;
        padding: 4px 0;
        border-radius: 8px;
        margin-bottom: 4px;
        cursor: pointer;
        background: transparent;
        transition: background 0.2s;
    }

        .song-list-item:hover {
            background-color: #36405F; /* --bg-item-hover */
        }

    /* Cover Box */
    .list-cover-box {
        width: 48px;
        height: 48px;
        background-color: #2A3550;
        border: 1px solid #3E4C6E;
        border-radius: 8px;
        margin-right: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.4);
    }

    /* Icon Placeholder (SVG Path from XAML) */
    .list-placeholder-icon {
        width: 22px;
        height: 22px;
        fill: #586380;
        opacity: 0.7;
    }

    /* Text Styles */
    .list-title {
        color: white;
        font-weight: 600;
        font-size: 14px;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .list-artist {
        color: #AEB7D3;
        font-size: 12px;
        margin-top: 2px;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .list-duration {
        color: #6F7A95;
        font-size: 13px;
        font-weight: 500;
        text-align: right;
        margin-right: 20px;
    }

    /* Context Menu Button */
    .btn-more {
        background: transparent;
        border: none;
        color: #6F7A95;
        font-weight: bold;
        font-size: 18px;
        width: 40px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-more:hover {
            color: white;
        }

    /* Header Styling */
    .page-header {
        display: flex;
        align-items: center;
        margin: 10px 0 15px 0;
    }

    .btn-back {
        background: transparent;
        border: none;
        color: white;
        font-size: 18px;
        margin-right: 15px;
        display: none;
    }
</style>

<div class="page-header">
    <button class="btn-back">⬅</button>
    <h2 style="font-size: 22px; font-weight: bold; color: white; margin: 0;">All Songs</h2>
</div>

<div class="song-list-container">
    @if (Model != null)
    {
        @foreach (var song in Model)
        {
            <div class="song-list-item" onclick="playStream(@song.Id, '@song.Title', '@song.Artist?.Name', '@song.DisplayCoverPath')">

                <div style="padding-left: 10px;">
                    <div class="list-cover-box">
                        @if (!string.IsNullOrEmpty(song.Album?.CoverPath))
                        {
                            <img src="@song.Album.CoverPath" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <svg class="list-placeholder-icon" viewBox="0 0 24 24">
                                <path d="M12 3v9.28c-.47-.17-.97-.28-1.5-.28C8.01 12 6 14.01 6 16.5S8.01 21 10.5 21c2.31 0 4.2-1.75 4.45-4H15V6h4V3h-7z" />
                            </svg>
                        }
                    </div>
                </div>

                <div style="overflow: hidden;">
                    <span class="list-title">@song.Title</span>
                    <span class="list-artist">@(song.Artist?.Name ?? "Unknown Artist")</span>
                </div>

                <div class="list-duration">
                    @song.DurationFormatted
                </div>

                <div>
                    <button class="btn-more" onclick="event.stopPropagation(); alert('Context menu placeholder');">⋮</button>
                </div>
            </div>
        }
    }
    else
    {
        <div style="color: #6F7A95; padding: 20px;">No songs found. Click "Scan Local" in the sidebar.</div>
    }
</div>